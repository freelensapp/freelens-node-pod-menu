{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":semanticCommitsDisabled"
  ],
  "addLabels": [
    "renovate"
  ],
  "ignoreDeps": [
    // it must be the same as bundled in Electron
    "node",
    // it must be the oldest possible version to get binary compatibility with older OSes 
    "ubuntu"
  ],
  "packageRules": [
    // major updates only
    {
      "groupName": "freelens",
      "matchManagers": [
        "npm"
      ],
      "matchPackageNames": [
        "@freelensapp/extensions"
      ],
      "matchUpdateTypes": [
        "major"
      ]
    },
    {
      "groupName": "freelens",
      "matchDepNames": [
        "freelensapp/freelens"
      ],
      "matchUpdateTypes": [
        "major"
      ]
    },
    // non-major updates only
    {
      "matchDepNames": [
        "@types/node"
      ],
      "matchUpdateTypes": [
        "major"
      ],
      "enabled": false
    }
  ],
  "customManagers": [
    // additional engine field in package.json
    {
      "customType": "regex",
      "extractVersionTemplate": "^(^??<version>.*)$",
      "fileMatch": [
        "^package\\.json$"
      ],
      "matchStrings": [
        "\"freelens\"\\s*:\\s*\"(?<currentValue>\\S+)\""
      ],
      "datasourceTemplate": "github-releases",
      "depNameTemplate": "freelensapp/freelens",
      "versioningTemplate": "npm"
    },
    // renovate hints after comment
    {
      "customType": "regex",
      "extractVersionTemplate": "^v?(?<version>.*)$",
      "fileMatch": [
        "^\\.github/workflows/.*\\.ya?ml$",
        "^\\.trunk/trunk.yaml",
        "^\\.tool-versions$"
      ],
      "matchStrings": [
        "(\\s+|.*?@)(?<currentValue>\\S+)\\s*#\\s*datasource=(?<datasource>\\S+)\\s+depName=(?<depName>\\S+)(\\s+versioning=(?<versioning>\\S+))?(\\s+registryUrl=(?<registryUrl>\\S+))?\\s*\\n"
      ],
      "versioningTemplate": "{{#if versioning}}{{{versioning}}}{{else}}semver{{/if}}"
    }
  ]
}
